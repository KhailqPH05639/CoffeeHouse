<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:background="@drawable/bg1"
        android:id="@+id/imgLichSu"
        android:scaleType="centerCrop"
        android:src="@drawable/nhahang2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="120dp"
        android:layout_height="100dp" />
    <TextView
        android:textStyle="bold"
        android:paddingLeft="128dp"
        android:layout_marginTop="12dp"
        android:text="Bàn số: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/padding_10"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvNameNHLS"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="201"
        android:paddingLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tvBuaAnLS"
        android:textSize="14sp"
        android:text="Đồ uống"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tvNameNHLS"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:maxLength="3"
        android:digits="0123456789"
        android:inputType="number"
        android:textSize="14sp"
        android:text="Campuchino"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_below="@+id/tvBuaAnLS"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvSoBanLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="Đang đặt"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_below="@+id/tvSoBanLS"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvTrangThaiLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>